RewriteRule ^([^/]+)/vignettes/([^/]+)/?$ %{ENV:proto}://bioconductor.org/packages/release/data/annotation/vignettes/$1/inst/doc/$2 [R=301]

RewriteCond %{DOCUMENT_ROOT}/packages/release/data/experiment/vignettes/$1/inst/doc/$2 -f
