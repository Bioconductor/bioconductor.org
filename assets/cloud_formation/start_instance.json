{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Create an instance of the Bioconductor AMI, which you can then access through a web browser using RStudio Server. **WARNING** This template creates an Amazon EC2 instance. You will be billed for the AWS resources used if you create a stack from this template.",

  "Parameters" : {
    "BiocVersion" : {
      "Description" : "Bioconductor Version. 2.10 (release) is recommended.",
      "Type" : "String",
      "Default": "2.10",
      "AllowedValues": ["2.8", "2.9", "2.10", "2.11"],
      "ConstraintDescription": "Must be 2.8, 2.9, 2.10, or 2.11"
    },
    "InstanceType" : {
      "Description" : "Type of EC2 instance to launch - see http://aws.amazon.com/ec2/instance-types/",
      "Type" : "String",
      "Default" : "t1.micro",
      "AllowedValues": ["t1.micro", "m1.small", "m1.medium", "m1.large",
        "m1.xlarge", "m2.xlarge", "m2.2xlarge", "m2.4xlarge", "c1.xlarge"],
      "ConstraintDescription": "Choose a valid EC2 instance type from http://aws.amazon.com/ec2/instance-types/"
      }
  },
  "Mappings" : {
    "BiocAMIMap" : {
      "2.8" : {
          "AMI" : "ami-4b2fee22"
      },
      "2.9" : {
          "AMI" : "ami-5f33e536"
      },
      "2.10" : {
          "AMI" : "ami-0c0da865"
      },
      "2.11" : {
          "AMI" : "ami-0c0da865"
      }
    }
  },

  "Resources" : {
    "Ec2Instance" : {
      "Type" : "AWS::EC2::Instance",
      "Properties" : {
        "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
        "ImageId" : { "Fn::FindInMap" : [ "BiocAMIMap", { "Ref" : "BiocVersion" }, "AMI" ]},
        "InstanceType": {"Ref": "InstanceType"},
        "Tags": [{"Key": "Name", "Value": "Bioconductor AMI Started From Template"}]
      }
    },

    "InstanceSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Enable HTTP access via port 8787",
        "SecurityGroupIngress" : [ {
          "IpProtocol" : "tcp",
          "FromPort" : "8787",
          "ToPort" : "8787",
          "CidrIp" : "0.0.0.0/0"
        } ]
      }
    }
  },

  "Outputs" : {
        "URL" : {
            "Description" : "URL of RStudio Server",
            "Value" :  { "Fn::Join" : [ "", [ "http://", 
                { "Fn::GetAtt" : [ "Ec2Instance", "PublicDnsName" ]}, ":8787"]]}
          },
        "Username": {
            "Description": "Log in with this username",
            "Value": "ubuntu"
        },
        "Password": {
            "Description": "Log in with this password",
            "Value": "bioc"
        },
        "Info": {
            "Description": "Message",
            "Value": "URL will be valid in a few seconds. Shut down all resources when done to avoid charges."
        }
  }
}