## define a variable that contains the protocol (http or https) of the
## current request.
## You can refer to the variable as  %{ENV:proto} and it will
## expand to its value.
## from http://stackoverflow.com/a/20419821/470769
# initialization code - put only once at the beginning of .htaccess
RewriteCond %{HTTPS} =on
RewriteRule ^(.*)$ - [env=proto:https]
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ - [env=proto:http]


## handle cache expiration times
ExpiresActive On
ExpiresByType text/html A600
ExpiresByType text/javascript A600

<ifModule mod_headers.c>
<FilesMatch "PACKAGES$|PACKAGES\.gz$|PACKAGES\.rds$|VIEWS">
Header set Cache-Control "max-age=30"
</FilesMatch>
<FilesMatch "\.json$|\.js$">
Header set Cache-Control "max-age=600"
</FilesMatch>
<FilesMatch "\.rss$">
Header set Cache-Control "max-age=300"
</FilesMatch>
<FilesMatch "gitlog\.xml$">
Header set Cache-Control "max-age=30"
</FilesMatch>
<FilesMatch "^biocLite\.R$|^BiocInstaller\.dcf$">
Header set Cache-Control "max-age=60"
</FilesMatch>
<FilesMatch "\.svg$">
Header set Cache-Control "max-age=30"
</FilesMatch>
<FilesMatch "\.csv$">
Header set Cache-Control "max-age=30"
</FilesMatch>
<FilesMatch "^config\.yaml$">
Header set Cache-Control "max-age=30"
</FilesMatch>

</ifModule>

<IfModule mod_rewrite.c>
RewriteEngine On
DirectorySlash On 
RewriteBase /

## Redirect www. to non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=302,L]
RewriteRule ^(.*)/index_html$ $1/ [R=302]
RewriteRule ^developers/how-to/git-mirror/$ /developers/how-to/git-mirrors/ [PT]
RewriteRule ^BioC2016/$ %{ENV:proto}://bioconductor.org/help/course-materials/2016/BioC2016/ [R=302]
RewriteRule ^BioC2017/$ %{ENV:proto}://bioconductor.org/help/course-materials/2017/BioC2017/ [R=302,NC]

## Handle omitted trailing slash:
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ %{ENV:proto}://bioconductor.org/$1/ [L,R]

## Redirect BioC versions 1.8-2.6 to static S3 website
RedirectMatch 302 /packages/(1.[8-9]|2.[0-9]|2.1[0-4]|3.[0-9])/bioc/src/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/bioc/src/$2
RedirectMatch 302 /packages/(1.[8-9]|2.[0-9]|2.1[0-4]|3.[0-9])/bioc/bin/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/bioc/bin/$2
RedirectMatch 302 /packages/(1.[8-9]|2.[0-9]|2.1[0-4]|3.[0-9])/data/annotation/src/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/data/annotation/src/$2
RedirectMatch 302 /packages/(1.[8-9]|2.[0-9]|2.1[0-4]|3.[0-9])/data/annotation/\s?bin/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/data/annotation/bin/$2
RedirectMatch 302 /packages/(1.[8-9]|2.[0-9]|2.1[0-4]|3.[0-9])/data/experiment/src/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/data/experiment/src/$2
RedirectMatch 302 /packages/(1.[8-9]|2.[0-9]|2.1[0-4]|3.[0-9])/data/experiment/\s?bin/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/data/experiment/bin/$2
# BioC 2.1 has an additional extannotation/ directory
RedirectMatch 302 /packages/2.1/data/extannotation/src/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/2.1/data/extannotation/src/$1
RedirectMatch 302 /packages/2.1/data/extannotation/bin/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/2.1/data/extannotation/bin/$1
# Starting in 2.13 also had workflows
RedirectMatch 302 /packages/(2.1[3-4]|3.[0-9])/workflows/src/(.*) http://archive.bioconductor.org.s3-website-us-east-1.amazonaws.com/packages/$1/workflows/src/$2
